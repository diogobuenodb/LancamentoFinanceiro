@model LancamentoFinanceiro.Business.Models.Lancamento

@{
    ViewData["Title"] = "Deletar";
}

@if (ViewBag.Error != null)
{
    <h3 style="color:red">@ViewBag.Error</h3>
}
<div>
    <h4>Deletar Lançamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Data Lançamento")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataLancamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            <select asp-for="Tipo" class="form-control" asp-items="ViewBag.TipoId" style="width: 25%;" disabled></select>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusId" style="width: 25%;" disabled></select>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
