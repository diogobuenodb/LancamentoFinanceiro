@model LancamentoFinanceiro.Business.Models.Lancamento

@{
    ViewData["Title"] = "Novo";
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger" role="alert">
        Ops! ocorreu um erro, tente novamente!
    </div>

}
<h4>Cadastro de Lançamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*<div class="form-group">
                    <label asp-for="DataLancamento" class="control-label"></label>
                    <input asp-for="DataLancamento" class="form-control" />
                    <span asp-validation-for="DataLancamento" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" type="number" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <br />
                <select asp-for="Tipo" class="form-control" asp-items="ViewBag.TipoId"></select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
